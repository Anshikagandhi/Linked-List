// Following is the node structure
/**************
class node{
public:
    int data;
    node * next;
    node(int data){
        this->data=data;
        this->next=NULL;
    }
};
***************/
node *reverse_linked_list_rec(node *head)
{
    //write your recursive code here
  if(head->next==NULL)
    return head;
  
  node* tmp=head->next;
    head->next=NULL;
   node* hd=reverse_linked_list_rec(tmp);
   tmp->next=head;
    return hd;
   }  

